function ruby19-select-help {
  echo "Usage: ruby19-select [1|2]"
  echo
  echo "1 - Selects `/usr/local/ruby191/bin/ruby --version`"
  echo "2 - Selects `/usr/local/ruby192/bin/ruby --version`"
  echo
  echo "Current: `which ruby`"
}

function ruby19-select {
  if [ $# -eq 0 ]; then
      ruby19-select-help
  else
    if [ $1 -eq '1' ]; then
      ln -snf /usr/local/ruby191 /usr/local/ruby19
      ruby --version
    else
      if [ $1 -eq '2' ]; then
        ln -snf /usr/local/ruby192 /usr/local/ruby19
        ruby --version
      else
        ruby19-select-help
      fi
    fi
  fi
}
